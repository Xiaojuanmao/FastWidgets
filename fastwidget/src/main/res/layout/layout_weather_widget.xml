<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="180dp"
    android:layout_margin="10dp"
    android:background="@drawable/layout_weather_widget_bg_drawable"
    android:orientation="vertical"
    android:paddingBottom="10dp">

    <TextView
        android:id="@+id/tv_temp_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginTop="32dp"
        android:textColor="@color/colorPrimary"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/tv_temp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_temp_detail"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginTop="-4dp"
        android:textColor="@color/colorPrimary"
        android:textSize="80sp" />

    <TextView
        android:id="@+id/tv_feel_temp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_temp"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginTop="-8dp"
        android:drawablePadding="4dp"
        android:gravity="center_vertical"
        android:textColor="@color/colorPrimary"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/tv_loc_humidity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/tv_feel_temp"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginTop="-8dp"
        android:layout_toRightOf="@id/tv_feel_temp"
        android:gravity="center_vertical"
        android:textColor="@color/colorPrimary"
        android:textSize="14sp" />

    <ProgressBar
        android:id="@+id/progress_bar"
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</RelativeLayout>